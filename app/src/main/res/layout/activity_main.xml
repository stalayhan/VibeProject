<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/md_grey_500"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/fileChooser_bt"
        android:background="@color/md_red_400"
        android:padding="@dimen/padding_size_bt"
        android:text="Single"
        />
     <Button
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:background="@color/md_purple_400"
         android:padding="@dimen/padding_size_bt"
         android:text="Multiplayer"
         />
    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playBack_btn"
        android:background="@color/md_yellow_400"
        android:padding="@dimen/padding_size_bt"
        android:text="@string/playBack_string"
        />
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/chart_bt"
        android:background="@color/md_blue_A400"
        android:padding="@dimen/padding_size_bt"
        android:text="@string/coordinates_chart"
        />


</LinearLayout>
