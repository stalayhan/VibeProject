<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="9"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="8"
        android:orientation="vertical">
        
        <net.talayhan.android.vibeproject.CircleTestView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            />
        
        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="2"
            android:id="@+id/seek_bar"
            />
        
        <!--
        <SeekBar
            android:id="@+id/songProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:thumb="@drawable/seek_handler"
            android:progressDrawable="@drawable/seekbar_progress"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="bottom"
            />
        -->
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <ImageButton
            android:layout_width="@dimen/custom_layout_size_bt"
            android:layout_height="@dimen/custom_layout_size_bt"
            android:id="@+id/play_bt"
            android:background="@drawable/btn_play" />
        <ImageButton
            android:layout_width="@dimen/custom_layout_size_bt"
            android:layout_height="@dimen/custom_layout_size_bt"
            android:text="Frw"
            android:background="@drawable/btn_forward"
            android:id="@+id/forward_bt"
            />
        <ImageButton
            android:layout_width="@dimen/custom_layout_size_bt"
            android:layout_height="@dimen/custom_layout_size_bt"
            android:background="@drawable/btn_backward"
            android:id="@+id/backward_bt"
            />
        <ImageButton
            android:layout_width="@dimen/custom_layout_size_bt"
            android:layout_height="@dimen/custom_layout_size_bt"
            android:background="@drawable/img_btn_repeat"
            android:id="@+id/accelarator"
            />
        <ImageButton
            android:layout_width="@dimen/custom_layout_size_bt"
            android:layout_height="@dimen/custom_layout_size_bt"
            android:id="@+id/capture_bt"
            android:background="@drawable/abc_btn_radio_material"
            />
        <ImageButton
            android:layout_width="@dimen/custom_layout_size_bt"
            android:layout_height="@dimen/custom_layout_size_bt"
            android:text=" "
            />
        <ImageButton
            android:layout_width="@dimen/custom_layout_size_bt"
            android:layout_height="@dimen/custom_layout_size_bt"
            android:text="7"
            />
        <ImageButton
            android:layout_width="@dimen/custom_layout_size_bt"
            android:layout_height="@dimen/custom_layout_size_bt"
            android:text="8"
            />
    </LinearLayout>
</LinearLayout>
